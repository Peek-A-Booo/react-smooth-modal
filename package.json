{
  "name": "react-smooth-modal",
  "version": "0.0.17",
  "description": "A Smooth Modal dialog for React.JS",
  "title": "React Smooth Modal",
  "keywords": [
    "modal",
    "draggable",
    "fullscreen",
    "smooth",
    "component",
    "components",
    "react",
    "react-component"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Peek-A-Booo/react-smooth-modal"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "lsx",
  "module": "dist/react-smooth-modal.esm.js",
  "size-limit": [
    {
      "path": "dist/react-smooth-modal.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-smooth-modal.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@rollup/plugin-image": "2.0.6",
    "@rollup/plugin-url": "6.0.0",
    "@size-limit/preset-small-lib": "4.9.1",
    "@svgr/rollup": "5.5.0",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "autoprefixer": "10.1.0",
    "cssnano": "4.1.10",
    "husky": "4.3.6",
    "less": "4.0.0",
    "postcss": "8.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "rollup-plugin-postcss": "4.0.0",
    "size-limit": "4.9.1",
    "tsdx": "0.14.1",
    "tslib": "2.0.3",
    "typescript": "4.1.3"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "browserslist": [
    "last 2 versions",
    "Firefox ESR",
    "> 1%",
    "ie >= 11"
  ]
}
